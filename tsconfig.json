{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"sourceMap": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"jsx": "react",
		"outDir": "dist",
		"skipLibCheck": true,
		"typeRoots": ["./src/types.d.ts", "node_modules/@types"]
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"],
	"exclude": ["node_modules"]
}
